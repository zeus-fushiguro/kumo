{% comment %}
  KUMO Benefits Section
  Title, subtitle, 3-column grid with icons, titles, badges, descriptions
{% endcomment %}

<section class="kumo-section" id="story">
  <div class="kumo-container">
    {%- comment -%} Section Header {%- endcomment -%}
    <div class="kumo-text-center kumo-reveal" style="margin-bottom: 4rem;">
      <h2 class="kumo-section-title kumo-text-fluffy">{{ section.settings.title }}</h2>
      {%- if section.settings.subtitle != blank -%}
        <p class="kumo-text-lg kumo-text-muted" style="margin-top: 1rem; max-width: 28rem; margin-left: auto; margin-right: auto;">
          {{ section.settings.subtitle }}
        </p>
      {%- endif -%}
    </div>

    {%- comment -%} Benefits Grid {%- endcomment -%}
    <div class="kumo-benefits__grid">
      {%- for block in section.blocks -%}
        <div class="kumo-benefit kumo-reveal kumo-reveal-delay-{{ forloop.index }}" {{ block.shopify_attributes }}>
          <div class="kumo-benefit__icon">
            {% render 'kumo-icon', icon: block.settings.icon %}
          </div>
          <h3 class="kumo-benefit__title">{{ block.settings.title }}</h3>
          {%- if block.settings.badge != blank -%}
            <span class="kumo-benefit__badge">{{ block.settings.badge }}</span>
          {%- endif -%}
          <p class="kumo-benefit__description">{{ block.settings.description }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .kumo-benefits__grid {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    gap: 2rem;
    max-width: 56rem;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .kumo-benefits__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 2rem;
    }
  }
</style>

