{% comment %}
  KUMO Gift Cards Grid Section
  Display available gift cards in a beautiful grid
{% endcomment %}

{%- liquid
  assign padding_top = section.settings.padding_top | default: 60
  assign padding_bottom = section.settings.padding_bottom | default: 60
  assign columns = section.settings.columns | default: 3
-%}

<section class="kumo-gift-cards-grid" style="--padding-top: {{ padding_top }}px; --padding-bottom: {{ padding_bottom }}px;">
  <div class="kumo-container">

    {%- comment -%} Header {%- endcomment -%}
    <div class="kumo-gift-cards-grid__header">
      {%- if section.settings.badge_text != blank -%}
        <div class="kumo-gift-cards-grid__badge">
          <span>üéÅ</span>
          <span>{{ section.settings.badge_text }}</span>
        </div>
      {%- endif -%}

      <h2 class="kumo-gift-cards-grid__title">{{ section.settings.title | default: "Offrez un Nuage de Douceur" }}</h2>

      {%- if section.settings.subtitle != blank -%}
        <p class="kumo-gift-cards-grid__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    {%- comment -%} Gift Cards Grid {%- endcomment -%}
    <div class="kumo-gift-cards-grid__grid kumo-gift-cards-grid__grid--cols-{{ columns }}">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'gift_card' -%}
            {%- assign gc_product = block.settings.product -%}
            {%- if gc_product != blank -%}
              <a href="{{ gc_product.url }}" class="kumo-gift-cards-grid__card" {{ block.shopify_attributes }}>
                <div class="kumo-gift-cards-grid__card-image">
                  {%- if gc_product.featured_image != blank -%}
                    <img
                      src="{{ gc_product.featured_image | image_url: width: 600 }}"
                      alt="{{ gc_product.featured_image.alt | default: gc_product.title | escape }}"
                      loading="lazy"
                    >
                  {%- else -%}
                    <div class="kumo-gift-cards-grid__placeholder">
                      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M20 12v10H4V12M2 7h20v5H2zM12 22V7M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7zM12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"/>
                      </svg>
                    </div>
                  {%- endif -%}
                </div>
                <div class="kumo-gift-cards-grid__card-info">
                  <h3 class="kumo-gift-cards-grid__card-title">{{ gc_product.title }}</h3>
                  <p class="kumo-gift-cards-grid__card-price">
                    √Ä partir de {{ gc_product.price_min | money }}
                  </p>
                  <span class="kumo-gift-cards-grid__card-cta">
                    Offrir ‚Üí
                  </span>
                </div>
              </a>
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      {%- else -%}
        {%- comment -%} Fallback: Show gift card products from all products {%- endcomment -%}
        {%- assign gift_card_products = collections.all.products | where: 'type', 'Gift Card' -%}
        {%- if gift_card_products.size == 0 -%}
          {%- assign gift_card_products = collections.all.products | where: 'gift_card', true -%}
        {%- endif -%}

        {%- for gc_product in gift_card_products limit: 4 -%}
          <a href="{{ gc_product.url }}" class="kumo-gift-cards-grid__card">
            <div class="kumo-gift-cards-grid__card-image">
              {%- if gc_product.featured_image != blank -%}
                <img
                  src="{{ gc_product.featured_image | image_url: width: 600 }}"
                  alt="{{ gc_product.featured_image.alt | default: gc_product.title | escape }}"
                  loading="lazy"
                >
              {%- else -%}
                <div class="kumo-gift-cards-grid__placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M20 12v10H4V12M2 7h20v5H2zM12 22V7M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7zM12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"/>
                  </svg>
                </div>
              {%- endif -%}
            </div>
            <div class="kumo-gift-cards-grid__card-info">
              <h3 class="kumo-gift-cards-grid__card-title">{{ gc_product.title }}</h3>
              <p class="kumo-gift-cards-grid__card-price">
                √Ä partir de {{ gc_product.price_min | money }}
              </p>
              <span class="kumo-gift-cards-grid__card-cta">
                Offrir ‚Üí
              </span>
            </div>
          </a>
        {%- else -%}
          {%- comment -%} Demo cards if no gift cards found {%- endcomment -%}
          {%- for i in (1..3) -%}
            <div class="kumo-gift-cards-grid__card kumo-gift-cards-grid__card--demo">
              <div class="kumo-gift-cards-grid__card-image">
                <div class="kumo-gift-cards-grid__placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M20 12v10H4V12M2 7h20v5H2zM12 22V7M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7zM12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"/>
                  </svg>
                </div>
              </div>
              <div class="kumo-gift-cards-grid__card-info">
                <h3 class="kumo-gift-cards-grid__card-title">Carte Cadeau KUMO</h3>
                <p class="kumo-gift-cards-grid__card-price">√Ä partir de 30 ‚Ç¨</p>
                <span class="kumo-gift-cards-grid__card-cta">Offrir ‚Üí</span>
              </div>
            </div>
          {%- endfor -%}
        {%- endfor -%}
      {%- endif -%}
    </div>

    {%- comment -%} Bottom CTA {%- endcomment -%}
    {%- if section.settings.show_cta and section.settings.cta_text != blank -%}
      <div class="kumo-gift-cards-grid__footer">
        <a href="{{ section.settings.cta_link | default: '/collections/cartes-cadeaux' }}" class="kumo-gift-cards-grid__cta">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {%- endif -%}

  </div>
</section>

<style>
  .kumo-gift-cards-grid {
    padding-top: var(--padding-top, 60px);
    padding-bottom: var(--padding-bottom, 60px);
    background: var(--kumo-background, hsl(35, 45%, 97%));
  }

  .kumo-gift-cards-grid__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .kumo-gift-cards-grid__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: hsl(30, 30%, 88%);
    border-radius: 9999px;
    font-family: var(--kumo-font-family, 'Quicksand', sans-serif);
    font-size: 0.8125rem;
    font-weight: 600;
    color: hsl(25, 35%, 40%);
    margin-bottom: 1rem;
  }

  .kumo-gift-cards-grid__title {
    font-family: var(--kumo-font-family, 'Quicksand', sans-serif);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--kumo-foreground, hsl(25, 30%, 25%));
    margin: 0 0 0.75rem;
    line-height: 1.2;
  }

  .kumo-gift-cards-grid__subtitle {
    font-family: var(--kumo-font-family, 'Quicksand', sans-serif);
    font-size: 1rem;
    color: var(--kumo-muted-foreground, hsl(25, 15%, 50%));
    margin: 0;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Grid */
  .kumo-gift-cards-grid__grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 640px) {
    .kumo-gift-cards-grid__grid--cols-2,
    .kumo-gift-cards-grid__grid--cols-3,
    .kumo-gift-cards-grid__grid--cols-4 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .kumo-gift-cards-grid__grid--cols-3 { grid-template-columns: repeat(3, 1fr); }
    .kumo-gift-cards-grid__grid--cols-4 { grid-template-columns: repeat(4, 1fr); }
  }

  /* Card */
  .kumo-gift-cards-grid__card {
    display: block;
    text-decoration: none;
    background: var(--kumo-card, white);
    border-radius: 1.25rem;
    overflow: hidden;
    box-shadow: 0 4px 20px -4px hsla(25, 30%, 20%, 0.1);
    transition: all 0.3s ease;
  }

  .kumo-gift-cards-grid__card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 30px -8px hsla(25, 30%, 20%, 0.15);
  }

  .kumo-gift-cards-grid__card--demo {
    pointer-events: none;
    opacity: 0.6;
  }

  .kumo-gift-cards-grid__card-image {
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: linear-gradient(135deg, hsl(280, 30%, 92%) 0%, hsl(200, 40%, 92%) 100%);
  }

  .kumo-gift-cards-grid__card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .kumo-gift-cards-grid__card:hover .kumo-gift-cards-grid__card-image img {
    transform: scale(1.05);
  }

  .kumo-gift-cards-grid__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: hsl(25, 20%, 70%);
  }

  .kumo-gift-cards-grid__card-info {
    padding: 1.25rem;
  }

  .kumo-gift-cards-grid__card-title {
    font-family: var(--kumo-font-family, 'Quicksand', sans-serif);
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--kumo-foreground, hsl(25, 30%, 25%));
    margin: 0 0 0.375rem;
  }

  .kumo-gift-cards-grid__card-price {
    font-family: var(--kumo-font-family, 'Quicksand', sans-serif);
    font-size: 0.9375rem;
    color: var(--kumo-muted-foreground, hsl(25, 15%, 50%));
    margin: 0 0 0.75rem;
  }

  .kumo-gift-cards-grid__card-cta {
    display: inline-block;
    font-family: var(--kumo-font-family, 'Quicksand', sans-serif);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--kumo-primary, hsl(25, 30%, 52%));
    transition: color 0.2s ease;
  }

  .kumo-gift-cards-grid__card:hover .kumo-gift-cards-grid__card-cta {
    color: hsl(25, 35%, 42%);
  }

  /* Footer CTA */
  .kumo-gift-cards-grid__footer {
    text-align: center;
    margin-top: 2.5rem;
  }

  .kumo-gift-cards-grid__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    background: var(--kumo-primary, hsl(25, 30%, 52%));
    color: white;
    font-family: var(--kumo-font-family, 'Quicksand', sans-serif);
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 9999px;
    transition: background 0.2s ease;
  }

  .kumo-gift-cards-grid__cta:hover {
    background: hsl(25, 30%, 46%);
  }
</style>

{% schema %}
{
  "name": "KUMO - Cartes Cadeaux",
  "tag": "section",
  "class": "section-kumo-gift-cards",
  "settings": [
    {
      "type": "header",
      "content": "Contenu"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Texte du badge",
      "default": "Id√©e Cadeau"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Offrez un Nuage de Douceur"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sous-titre",
      "default": "Le cadeau parfait pour faire plaisir √† coup s√ªr"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Espacement haut",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Espacement bas",
      "default": 60
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Colonnes (desktop)",
      "default": 3
    },
    {
      "type": "header",
      "content": "Bouton"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Afficher le bouton",
      "default": false
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Texte du bouton",
      "default": "Voir toutes les cartes"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Lien du bouton"
    }
  ],
  "blocks": [
    {
      "type": "gift_card",
      "name": "Carte Cadeau",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Produit carte cadeau"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "KUMO - Cartes Cadeaux",
      "blocks": []
    }
  ]
}
{% endschema %}
