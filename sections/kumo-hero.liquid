{% comment %}
  KUMO Hero Section
  Full-screen hero with dreamy faded background, prominent title
{% endcomment %}

<section class="kumo-hero kumo-hero--align-{{ section.settings.content_alignment }}">
  {%- comment -%} Background Image with Dreamy Fade {%- endcomment -%}
  <div class="kumo-hero__background">
    {%- if section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        alt="{{ section.settings.image.alt | default: section.settings.title_line1 | escape }}"
        class="kumo-hero__image"
        loading="eager"
        fetchpriority="high"
      >
    {%- else -%}
      <div class="kumo-hero__placeholder">
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      </div>
    {%- endif -%}
    {%- comment -%} Dreamy cream overlay - fades the background {%- endcomment -%}
    <div class="kumo-hero__fade"></div>
    {%- comment -%} Gradient for text readability {%- endcomment -%}
    <div class="kumo-hero__gradient"></div>
  </div>

  {%- comment -%} Content {%- endcomment -%}
  <div class="kumo-hero__content">
    <div class="kumo-container">
      <div class="kumo-hero__inner">
        <h1 class="kumo-hero__title kumo-animate-fade-up">
          <span class="kumo-hero__title-line1">{{ section.settings.title_line1 }}</span>
          <br>
          <span class="kumo-hero__title-line2">{{ section.settings.title_line2 }}</span>
        </h1>

        <p class="kumo-hero__description kumo-animate-fade-up" style="animation-delay: 0.2s;">
          {{ section.settings.description }}
        </p>

        {%- if section.settings.button_text != blank -%}
          <div class="kumo-hero__cta kumo-animate-fade-up" style="animation-delay: 0.4s;">
            <a href="{{ section.settings.button_link }}" class="kumo-btn-cozy">
              <span>{{ section.settings.button_text }}</span>
              {% render 'kumo-icon', icon: 'arrow-right' %}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .kumo-hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .kumo-hero__background {
    position: absolute;
    inset: 0;
  }

  .kumo-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center right;
  }

  .kumo-hero__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, hsl(35, 45%, 95%) 0%, hsl(30, 40%, 90%) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .kumo-hero__placeholder svg {
    width: 40%;
    height: 40%;
    fill: var(--kumo-muted-foreground);
    opacity: 0.3;
  }

  /* Dreamy cream fade overlay - makes background soft/faded */
  .kumo-hero__fade {
    position: absolute;
    inset: 0;
    background: hsla(35, 45%, 97%, 0.65);
    backdrop-filter: blur(1px);
  }

  /* Gradient for better text contrast on left side */
  .kumo-hero__gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to right,
      hsla(35, 45%, 97%, 0.9) 0%,
      hsla(35, 45%, 97%, 0.7) 30%,
      hsla(35, 45%, 97%, 0.3) 60%,
      transparent 100%
    );
  }

  .kumo-hero__content {
    position: relative;
    z-index: 1;
    padding: 8rem 0 4rem;
    width: 100%;
  }

  .kumo-hero__inner {
    max-width: 36rem;
  }

  /* Title styling - prominent and dark */
  .kumo-hero__title {
    font-family: var(--kumo-font-family);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .kumo-hero__title-line1 {
    color: var(--kumo-foreground);
    display: block;
  }

  .kumo-hero__title-line2 {
    color: var(--kumo-primary);
    display: block;
  }

  .kumo-hero__description {
    font-family: var(--kumo-font-family);
    font-size: 1rem;
    line-height: 1.7;
    color: var(--kumo-muted-foreground);
    max-width: 26rem;
    margin-bottom: 2rem;
  }

  .kumo-hero__cta {
    display: inline-block;
  }

  /* Alignment: Left (default) */
  .kumo-hero--align-left .kumo-hero__inner {
    text-align: left;
  }
  .kumo-hero--align-left .kumo-hero__description {
    margin-left: 0;
    margin-right: auto;
  }

  /* Alignment: Center */
  .kumo-hero--align-center {
    justify-content: center;
  }
  .kumo-hero--align-center .kumo-hero__inner {
    text-align: center;
    margin-left: auto;
    margin-right: auto;
  }
  .kumo-hero--align-center .kumo-hero__description {
    margin-left: auto;
    margin-right: auto;
  }
  .kumo-hero--align-center .kumo-hero__gradient {
    background: radial-gradient(
      ellipse at center,
      hsla(35, 45%, 97%, 0.85) 0%,
      hsla(35, 45%, 97%, 0.5) 50%,
      transparent 80%
    );
  }

  /* Alignment: Right */
  .kumo-hero--align-right {
    justify-content: flex-end;
  }
  .kumo-hero--align-right .kumo-hero__inner {
    text-align: right;
    margin-left: auto;
    margin-right: 0;
  }
  .kumo-hero--align-right .kumo-hero__description {
    margin-left: auto;
    margin-right: 0;
  }
  .kumo-hero--align-right .kumo-hero__gradient {
    background: linear-gradient(
      to left,
      hsla(35, 45%, 97%, 0.9) 0%,
      hsla(35, 45%, 97%, 0.7) 30%,
      hsla(35, 45%, 97%, 0.3) 60%,
      transparent 100%
    );
  }

  /* Mobile adjustments */
  @media (max-width: 767px) {
    .kumo-hero__content {
      padding: 7rem 0 3rem;
    }

    .kumo-hero__inner {
      text-align: left;
    }

    .kumo-hero__description {
      margin-left: 0;
      font-size: 0.9375rem;
    }

    .kumo-hero__fade {
      background: hsla(35, 45%, 97%, 0.75);
    }

    .kumo-hero__gradient {
      background: linear-gradient(
        to bottom,
        hsla(35, 45%, 97%, 0.95) 0%,
        hsla(35, 45%, 97%, 0.7) 40%,
        hsla(35, 45%, 97%, 0.4) 70%,
        transparent 100%
      );
    }
  }
</style>

{% schema %}
{
  "name": "KUMO - Hero",
  "class": "kumo-hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image de fond"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Alignement du contenu",
      "options": [
        { "value": "left", "label": "Gauche" },
        { "value": "center", "label": "Centre" },
        { "value": "right", "label": "Droite" }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "title_line1",
      "label": "Titre - Ligne 1",
      "default": "Cocooning"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "Titre - Ligne 2 (colorée)",
      "default": "à chaque pas."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Transformez votre intérieur en un refuge. Découvrez le confort ultime de la collection KUMO."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texte du bouton",
      "default": "Explorer le Nuage"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton"
    }
  ],
  "presets": [
    {
      "name": "KUMO - Hero",
      "settings": {
        "title_line1": "Cocooning",
        "title_line2": "à chaque pas.",
        "description": "Transformez votre intérieur en un refuge. Découvrez le confort ultime de la collection KUMO.",
        "button_text": "Explorer le Nuage",
        "content_alignment": "left"
      }
    }
  ]
}
{% endschema %}
