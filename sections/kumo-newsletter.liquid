{% comment %}
  KUMO Newsletter Section
  Title, description, email form with Shopify Customer integration
{% endcomment %}

<section class="kumo-section">
  <div class="kumo-container">
    <div class="kumo-newsletter kumo-reveal">
      <h3 class="kumo-newsletter__title kumo-text-fluffy">{{ section.settings.title }}</h3>
      <p class="kumo-newsletter__description">{{ section.settings.description }}</p>

      {% form 'customer', class: 'kumo-newsletter__form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">

        {% if form.errors %}
          <div class="kumo-newsletter__error">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        {% if form.posted_successfully? %}
          <div class="kumo-newsletter__success">
            {{ section.settings.success_message }}
          </div>
        {% else %}
          <input
            type="email"
            name="contact[email]"
            id="newsletter-email"
            placeholder="{{ section.settings.placeholder }}"
            class="kumo-newsletter__input"
            required
            autocomplete="email"
          >
          <button type="submit" class="kumo-btn-cozy kumo-newsletter__button">
            {{ section.settings.button_text }}
          </button>
        {% endif %}
      {% endform %}
    </div>
  </div>
</section>

<style>
  .kumo-newsletter__error {
    width: 100%;
    padding: 0.75rem 1rem;
    background-color: hsl(0, 60%, 95%);
    color: hsl(0, 60%, 40%);
    border-radius: var(--kumo-radius);
    font-size: 0.875rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .kumo-newsletter__success {
    padding: 1rem 2rem;
    background-color: hsl(140, 40%, 95%);
    color: hsl(140, 40%, 30%);
    border-radius: var(--kumo-radius-full);
    font-size: 1rem;
    font-weight: 500;
    text-align: center;
  }
</style>

{% schema %}
{
  "name": "KUMO - Newsletter",
  "class": "kumo-newsletter-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Rejoignez le Cocon"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Recevez nos offres exclusives et les nouveautés en avant-première."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Placeholder email",
      "default": "votre@email.com"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texte du bouton",
      "default": "S'inscrire"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Message de succès",
      "default": "Merci ! Vous êtes maintenant inscrit(e)."
    }
  ],
  "presets": [
    {
      "name": "KUMO - Newsletter",
      "settings": {
        "title": "Rejoignez le Cocon",
        "description": "Recevez nos offres exclusives et les nouveautés en avant-première.",
        "placeholder": "votre@email.com",
        "button_text": "S'inscrire",
        "success_message": "Merci ! Vous êtes maintenant inscrit(e)."
      }
    }
  ]
}
{% endschema %}
