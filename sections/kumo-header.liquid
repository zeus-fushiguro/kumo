{% comment %}
  KUMO Header Section
  Fixed header with pill-shaped navbar, centered logo, nav links, and cart
{% endcomment %}

<header class="kumo-header kumo-animate-slide-down" id="kumo-header">
  <div class="kumo-container">
    <nav class="kumo-navbar">
      {%- comment -%} Mobile menu spacer {%- endcomment -%}
      <div class="kumo-navbar__spacer kumo-navbar__mobile-toggle">
        <button type="button" class="kumo-btn-icon kumo-mobile-menu-toggle" aria-label="Menu">
          {% render 'kumo-icon', icon: 'menu' %}
        </button>
      </div>

      {%- comment -%} Left Navigation (Desktop) {%- endcomment -%}
      <div class="kumo-navbar__nav">
        {%- for block in section.blocks -%}
          {%- if block.type == 'nav_link' -%}
            <a href="{{ block.settings.link }}" class="kumo-navbar__link">
              {{ block.settings.text }}
            </a>
          {%- endif -%}
        {%- endfor -%}
      </div>

      {%- comment -%} Center Logo {%- endcomment -%}
      <a href="{{ routes.root_url }}" class="kumo-navbar__logo">
        {%- if section.settings.logo != blank -%}
          <img
            src="{{ section.settings.logo | image_url: height: section.settings.logo_height | times: 2 }}"
            alt="{{ shop.name }}"
            height="{{ section.settings.logo_height }}"
            width="auto"
            loading="eager"
          >
        {%- else -%}
          <span class="kumo-navbar__logo-text">{{ shop.name }}</span>
        {%- endif -%}
      </a>

      {%- comment -%} Right - Cart {%- endcomment -%}
      <div class="kumo-navbar__cart">
        <a href="{{ routes.cart_url }}" class="kumo-btn-icon" aria-label="Panier">
          {% render 'kumo-icon', icon: 'cart' %}
          <span class="kumo-navbar__cart-count" data-cart-count>{{ cart.item_count }}</span>
        </a>
      </div>
    </nav>
  </div>
</header>

{%- comment -%} Mobile Menu Drawer {%- endcomment -%}
<div class="kumo-mobile-menu" id="kumo-mobile-menu">
  <div class="kumo-mobile-menu__overlay"></div>
  <div class="kumo-mobile-menu__content">
    <button type="button" class="kumo-mobile-menu__close kumo-btn-icon" aria-label="Fermer">
      {% render 'kumo-icon', icon: 'x' %}
    </button>
    <nav class="kumo-mobile-menu__nav">
      {%- for block in section.blocks -%}
        {%- if block.type == 'nav_link' -%}
          <a href="{{ block.settings.link }}" class="kumo-mobile-menu__link">
            {{ block.settings.text }}
          </a>
        {%- endif -%}
      {%- endfor -%}
    </nav>
  </div>
</div>

{%- comment -%} Spacer for fixed header {%- endcomment -%}
<div class="kumo-header-spacer"></div>

<style>
  .kumo-header-spacer {
    height: 80px;
  }

  .kumo-navbar__logo-text {
    font-family: var(--kumo-font-family);
    font-weight: 700;
    font-size: 1.5rem;
    color: var(--kumo-foreground);
  }

  .kumo-navbar__mobile-toggle {
    display: block;
  }

  @media (min-width: 768px) {
    .kumo-navbar__mobile-toggle {
      display: none;
    }
  }

  /* Mobile Menu Styles */
  .kumo-mobile-menu {
    position: fixed;
    inset: 0;
    z-index: 100;
    visibility: hidden;
    pointer-events: none;
  }

  .kumo-mobile-menu.is-open {
    visibility: visible;
    pointer-events: auto;
  }

  .kumo-mobile-menu__overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.3);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .kumo-mobile-menu.is-open .kumo-mobile-menu__overlay {
    opacity: 1;
  }

  .kumo-mobile-menu__content {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 80%;
    max-width: 320px;
    background-color: var(--kumo-background);
    padding: 2rem;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .kumo-mobile-menu.is-open .kumo-mobile-menu__content {
    transform: translateX(0);
  }

  .kumo-mobile-menu__close {
    position: absolute;
    top: 1rem;
    right: 1rem;
  }

  .kumo-mobile-menu__nav {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .kumo-mobile-menu__link {
    font-family: var(--kumo-font-family);
    font-weight: 500;
    font-size: 1.125rem;
    color: var(--kumo-foreground);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .kumo-mobile-menu__link:hover {
    color: var(--kumo-primary);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileToggle = document.querySelector('.kumo-mobile-menu-toggle');
    const mobileMenu = document.getElementById('kumo-mobile-menu');
    const mobileClose = document.querySelector('.kumo-mobile-menu__close');
    const mobileOverlay = document.querySelector('.kumo-mobile-menu__overlay');

    if (mobileToggle && mobileMenu) {
      mobileToggle.addEventListener('click', function() {
        mobileMenu.classList.add('is-open');
        document.body.style.overflow = 'hidden';
      });

      function closeMenu() {
        mobileMenu.classList.remove('is-open');
        document.body.style.overflow = '';
      }

      if (mobileClose) mobileClose.addEventListener('click', closeMenu);
      if (mobileOverlay) mobileOverlay.addEventListener('click', closeMenu);
    }
  });
</script>

{% schema %}
{
  "name": "KUMO - Header",
  "class": "kumo-header-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 24,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Hauteur du logo",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "nav_link",
      "name": "Lien navigation",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Texte",
          "default": "Collection"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Lien"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "KUMO - Header",
      "blocks": [
        {
          "type": "nav_link",
          "settings": {
            "text": "Collection",
            "link": "/collections/all"
          }
        },
        {
          "type": "nav_link",
          "settings": {
            "text": "Notre Histoire",
            "link": "/pages/about"
          }
        }
      ]
    }
  ]
}
{% endschema %}
