{% comment %}
  KUMO Header Section
  Fixed header with pill-shaped navbar, centered logo, nav links, account, and cart
{% endcomment %}

<header class="kumo-header kumo-animate-slide-down" id="kumo-header">
  <div class="kumo-container">
    <nav class="kumo-navbar">
      {%- comment -%} Left: Mobile menu + Desktop Nav {%- endcomment -%}
      <div class="kumo-navbar__left">
        <button type="button" class="kumo-btn-icon kumo-mobile-menu-toggle kumo-navbar__mobile-only" aria-label="Menu">
          {% render 'kumo-icon', icon: 'menu' %}
        </button>
        <div class="kumo-navbar__nav kumo-navbar__desktop-only">
          {%- for block in section.blocks -%}
            {%- if block.type == 'nav_link' -%}
              <a href="{{ block.settings.link }}" class="kumo-navbar__link">
                {{ block.settings.text }}
              </a>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

      {%- comment -%} Center: Logo {%- endcomment -%}
      <a href="{{ routes.root_url }}" class="kumo-navbar__logo">
        {%- if section.settings.logo -%}
          {%- assign logo_height = section.settings.logo_height | default: 48 -%}
          {%- assign logo_height_2x = logo_height | times: 2 -%}
          <img
            src="{{ section.settings.logo | image_url: height: logo_height_2x }}"
            srcset="{{ section.settings.logo | image_url: height: logo_height }} 1x, {{ section.settings.logo | image_url: height: logo_height_2x }} 2x"
            alt="{{ shop.name }}"
            style="height: {{ logo_height }}px; width: auto;"
            loading="eager"
            class="kumo-navbar__logo-img"
          >
        {%- else -%}
          <span class="kumo-navbar__logo-text">{{ shop.name }}</span>
        {%- endif -%}
      </a>

      {%- comment -%} Right: Account + Cart {%- endcomment -%}
      <div class="kumo-navbar__right">
        <a href="{{ routes.account_login_url | default: '/account/login' }}" class="kumo-btn-icon kumo-navbar__icon" aria-label="Mon compte">
          {% render 'kumo-icon', icon: 'user' %}
        </a>
        <a href="{{ routes.cart_url }}" class="kumo-btn-icon kumo-navbar__icon kumo-navbar__cart" aria-label="Panier">
          {% render 'kumo-icon', icon: 'cart' %}
          {%- if cart.item_count > 0 -%}
            <span class="kumo-navbar__cart-count">{{ cart.item_count }}</span>
          {%- endif -%}
        </a>
      </div>
    </nav>
  </div>
</header>

{%- comment -%} Mobile Menu Drawer {%- endcomment -%}
<div class="kumo-mobile-menu" id="kumo-mobile-menu">
  <div class="kumo-mobile-menu__overlay"></div>
  <div class="kumo-mobile-menu__content">
    <button type="button" class="kumo-mobile-menu__close kumo-btn-icon" aria-label="Fermer">
      {% render 'kumo-icon', icon: 'x' %}
    </button>
    <nav class="kumo-mobile-menu__nav">
      {%- for block in section.blocks -%}
        {%- if block.type == 'nav_link' -%}
          <a href="{{ block.settings.link }}" class="kumo-mobile-menu__link">
            {{ block.settings.text }}
          </a>
        {%- endif -%}
      {%- endfor -%}
      <a href="{{ routes.account_url }}" class="kumo-mobile-menu__link">
        Mon compte
      </a>
    </nav>
  </div>
</div>

{%- comment -%} Spacer for fixed header {%- endcomment -%}
<div class="kumo-header-spacer"></div>

<style>
  .kumo-header-spacer {
    height: 80px;
  }

  .kumo-navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: hsla(38, 50%, 96%, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: var(--kumo-radius-full);
    padding: 0.5rem 1rem;
    box-shadow: var(--kumo-shadow-soft);
  }

  .kumo-navbar__left,
  .kumo-navbar__right {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    min-width: 80px;
  }

  .kumo-navbar__right {
    justify-content: flex-end;
  }

  .kumo-navbar__nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .kumo-navbar__link {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--kumo-muted-foreground);
    text-decoration: none;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .kumo-navbar__link:hover {
    color: var(--kumo-foreground);
  }

  .kumo-navbar__logo {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .kumo-navbar__logo-img {
    display: block;
    width: auto;
    object-fit: contain;
  }

  .kumo-navbar__logo-text {
    font-family: var(--kumo-font-family);
    font-weight: 700;
    font-size: 1.5rem;
    color: var(--kumo-foreground);
  }

  .kumo-navbar__icon {
    padding: 0.625rem;
  }

  .kumo-navbar__icon svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .kumo-navbar__cart {
    position: relative;
  }

  .kumo-navbar__cart-count {
    position: absolute;
    top: -4px;
    right: -4px;
    min-width: 1.125rem;
    height: 1.125rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.625rem;
    font-weight: 700;
    color: var(--kumo-primary-foreground);
    background-color: var(--kumo-primary);
    border-radius: 50%;
    padding: 0 0.25rem;
  }

  /* Mobile / Desktop visibility */
  .kumo-navbar__mobile-only {
    display: flex;
  }
  .kumo-navbar__desktop-only {
    display: none;
  }

  @media (min-width: 768px) {
    .kumo-navbar {
      padding: 0.75rem 1.5rem;
    }
    .kumo-navbar__mobile-only {
      display: none;
    }
    .kumo-navbar__desktop-only {
      display: flex;
    }
    .kumo-navbar__left,
    .kumo-navbar__right {
      min-width: 120px;
    }
  }

  /* Mobile Menu Styles */
  .kumo-mobile-menu {
    position: fixed;
    inset: 0;
    z-index: 100;
    visibility: hidden;
    pointer-events: none;
  }

  .kumo-mobile-menu.is-open {
    visibility: visible;
    pointer-events: auto;
  }

  .kumo-mobile-menu__overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.3);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .kumo-mobile-menu.is-open .kumo-mobile-menu__overlay {
    opacity: 1;
  }

  .kumo-mobile-menu__content {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 80%;
    max-width: 320px;
    background-color: var(--kumo-background);
    padding: 2rem;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .kumo-mobile-menu.is-open .kumo-mobile-menu__content {
    transform: translateX(0);
  }

  .kumo-mobile-menu__close {
    position: absolute;
    top: 1rem;
    right: 1rem;
  }

  .kumo-mobile-menu__nav {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .kumo-mobile-menu__link {
    font-family: var(--kumo-font-family);
    font-weight: 500;
    font-size: 1.125rem;
    color: var(--kumo-foreground);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .kumo-mobile-menu__link:hover {
    color: var(--kumo-primary);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileToggle = document.querySelector('.kumo-mobile-menu-toggle');
    const mobileMenu = document.getElementById('kumo-mobile-menu');
    const mobileClose = document.querySelector('.kumo-mobile-menu__close');
    const mobileOverlay = document.querySelector('.kumo-mobile-menu__overlay');

    if (mobileToggle && mobileMenu) {
      mobileToggle.addEventListener('click', function() {
        mobileMenu.classList.add('is-open');
        document.body.style.overflow = 'hidden';
      });

      function closeMenu() {
        mobileMenu.classList.remove('is-open');
        document.body.style.overflow = '';
      }

      if (mobileClose) mobileClose.addEventListener('click', closeMenu);
      if (mobileOverlay) mobileOverlay.addEventListener('click', closeMenu);
    }
  });
</script>

{% schema %}
{
  "name": "KUMO - Header",
  "class": "kumo-header-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_height",
      "min": 32,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Hauteur du logo",
      "default": 56
    }
  ],
  "blocks": [
    {
      "type": "nav_link",
      "name": "Lien navigation",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Texte",
          "default": "Collection"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Lien"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "KUMO - Header",
      "blocks": [
        {
          "type": "nav_link",
          "settings": {
            "text": "Collection",
            "link": "/collections/all"
          }
        },
        {
          "type": "nav_link",
          "settings": {
            "text": "Notre Histoire",
            "link": "/pages/about"
          }
        }
      ]
    }
  ]
}
{% endschema %}
