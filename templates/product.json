{
  "sections": {
    "kumo-header": {
      "type": "kumo-header",
      "settings": {
        "logo_height": 48
      },
      "blocks": {
        "nav-1": {
          "type": "nav_link",
          "settings": {
            "text": "Collection",
            "link": "shopify://collections/all"
          }
        },
        "nav-2": {
          "type": "nav_link",
          "settings": {
            "text": "Notre Histoire",
            "link": ""
          }
        }
      },
      "block_order": ["nav-1", "nav-2"]
    },
    "kumo-product-main": {
      "type": "kumo-product-main",
      "settings": {
        "show_badge": true,
        "show_rating": true,
        "show_short_description": true
      }
    },
    "kumo-product-details": {
      "type": "kumo-product-details",
      "blocks": {
        "description": {
          "type": "accordion",
          "settings": {
            "title": "Description",
            "content_source": "product_description",
            "open_by_default": true
          }
        },
        "characteristics": {
          "type": "accordion",
          "settings": {
            "title": "Caractéristiques",
            "content_source": "custom",
            "custom_content": "<ul><li>Semelle Cloud-Foam™ de 3cm</li><li>Doublure Sherpa ultra-douce</li><li>Matériaux 100% vegan</li><li>Semelle antidérapante</li></ul>"
          }
        },
        "shipping": {
          "type": "accordion",
          "settings": {
            "title": "Livraison & Retours",
            "content_source": "custom",
            "custom_content": "<p><strong>Livraison gratuite</strong> dès 50€ d'achat.</p><p>Livraison en 3-5 jours ouvrés.</p><p><strong>Retours gratuits</strong> sous 30 jours. Satisfait ou remboursé.</p>"
          }
        },
        "care": {
          "type": "accordion",
          "settings": {
            "title": "Conseils d'entretien",
            "content_source": "custom",
            "custom_content": "<p>Lavage à la main recommandé. Ne pas passer au sèche-linge. Laisser sécher à l'air libre.</p>"
          }
        }
      },
      "block_order": ["description", "characteristics", "shipping", "care"]
    },
    "kumo-related-products": {
      "type": "kumo-related-products",
      "settings": {
        "title": "Vous aimerez aussi",
        "source": "collection",
        "products_count": 4,
        "show_view_more": false
      }
    },
    "kumo-footer": {
      "type": "kumo-footer",
      "settings": {
        "show_payment": true,
        "tagline": "Fait avec ☁️ en France."
      },
      "blocks": {
        "link-1": {
          "type": "link",
          "settings": {
            "text": "Collection",
            "url": "shopify://collections/all"
          }
        },
        "link-2": {
          "type": "link",
          "settings": {
            "text": "Notre Histoire",
            "url": ""
          }
        },
        "link-3": {
          "type": "link",
          "settings": {
            "text": "FAQ",
            "url": ""
          }
        },
        "link-4": {
          "type": "link",
          "settings": {
            "text": "Contact",
            "url": ""
          }
        }
      },
      "block_order": ["link-1", "link-2", "link-3", "link-4"]
    }
  },
  "order": [
    "kumo-header",
    "kumo-product-main",
    "kumo-product-details",
    "kumo-related-products",
    "kumo-footer"
  ]
}
